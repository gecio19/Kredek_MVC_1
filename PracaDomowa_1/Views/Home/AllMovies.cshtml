    background-color:grey;
    opacity: 80%;
}

        .menu-box.open-menu {
            border-radius:20%;
            width: 40vh;
            height: 40vh;
        }


        .menu-box h4 
                {
                    opacity: 100%;
            top: 0;
            max-height:20px;
                }

                .menu-box ul
                {
                    color:black;
                     opacity: 100%;
                    position:absolute;
